# TasteMaker Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AI PROVIDERS (at least one required)
# =============================================================================

# Anthropic API Key - For Claude models (color/typography exploration, component generation)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI API Key - For GPT models (alternative to Anthropic)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Preferred AI Provider - Which provider to use when both are configured
# Options: "anthropic" or "openai"
# If not set, defaults to anthropic when both keys are present
AI_PROVIDER=

# =============================================================================
# DATABASE
# =============================================================================

# Database URL - SQLite (default) or PostgreSQL
# SQLite (simple, local): sqlite:///./tastemaker.db
# PostgreSQL: postgresql://user:password@localhost:5432/tastemaker
DATABASE_URL=sqlite:///./tastemaker.db

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Single User Mode - Skip authentication for simple local use
# When true: No login required, auto-creates a "Local User" account
# When false: Normal JWT authentication flow
SINGLE_USER_MODE=true

# JWT Secret Key - Required only if SINGLE_USER_MODE=false
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# =============================================================================
# BACKGROUND JOBS (Optional)
# =============================================================================

# Enable Background Jobs - Requires Redis and Celery worker
# When false (default): Video audit runs synchronously (slower but no extra setup)
# When true: Video audit runs in background via Celery (faster, better UX)
ENABLE_BACKGROUND_JOBS=false

# Redis URL - Required only if ENABLE_BACKGROUND_JOBS=true
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CORS (Optional)
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Default: http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# =============================================================================
# FILE STORAGE (Optional)
# =============================================================================

# Upload directory for video files
# Default: system temp directory
# UPLOAD_DIR=/path/to/uploads
